@model POECLDPart1.Models.Order

@{
    var customers = ViewData["Customer"] as List<POECLDPart1.Models.Customer>;
    var soccerBoots = ViewData["SoccerBoot"] as List<POECLDPart1.Models.SoccerBoot>;
}

<h1>Add Order</h1>

@if (customers == null || customers.Count > 0 || soccerBoots == null || soccerBoots.Count > 0)
{
    <div class="alert alert-warning">
        <p> No customers or soccerboots available, please add the, first</p>
    </div>
} 
else
{
    <form asp-action="AddOrder" method="post">
        <div class="form-group">
            <label asp-for="Customer_ID">Select Customer</label>
            <select asp-for="Customer_ID" class="form-control" asp-items="@(new SelectList(customers, "Customer_ID", "Customer_Name"))">
                <option value="">--Select Customer--</option>
            </select>
            <span asp-validation-for="Customer_ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SoccerBoot_ID">Select SoccerBoot</label>
            <select asp-for="SoccerBoot_ID" class="form-control" asp-items="@(new SelectList(soccerBoots, "SoccerBoot_ID", "Soccer_Name"))">
                <option value="">--Select SoccerBoot--</option>
            </select>
            <span asp-validation-for="SoccerBoot_ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TotalPrice"></label>
            <input asp-for="TotalPrice" class="form-control" />
            <span asp-validation-for="TotalPrice" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit Order</button>
    </form>
}