@model POECLDPart1.Models.SoccerBoot

<h2>Add New Product</h2>
<form asp-action="AddSoccerBoot" method="post" enctype="multipart/form-data">
   
    <div class="form-group">
        <label for="SoccerBoot_Name">Name</label>
        <input type="text" class="form-control" id="SoccerBoot_Name" name="SoccerBoot_Name" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description"></textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="Price" required />
    </div>
   
    <div class="form-group">
        <label for="file">Image</label>
        <input type="file" class="form-control-file" id="file" name="file" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Soccer Boot</button>
</form>
