@model IEnumerable<POECLDPart1.Models.SoccerBoot>

<h1>Soccer Boots</h1>

<a href="@Url.Action("AddSoccerBoot", "SoccerBoots")" class="btn btn-primary">Add A New Soccer Boot</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var soccerBoot in Model)
        {
            <tr>
                <td>@soccerBoot.SoccerBoot_Name</td>
                <td>@soccerBoot.Description</td>
                <td>@soccerBoot.Price</td>
              
                <td>
                    @if (!string.IsNullOrEmpty(soccerBoot.ImageUrl))
                    {
                        <img src="@soccerBoot.ImageUrl" alt="@soccerBoot.SoccerBoot_Name" style="width:190px; height:auto;" />
                    }
                </td>
                <td>
                    <form asp-action="DeleteSoccerBoot" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@soccerBoot.PartitionKey" />
                        <input type="hidden" name="RowKey" value="@soccerBoot.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this soccer boot?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
